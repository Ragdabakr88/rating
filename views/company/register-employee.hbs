
<div class="row">
  <div class="col-md-12 col-xs-12 col-md-offset-3">
 

<h2>Register employee</h2>
<hr>

{{#each errors}}
<div class="alert alert-danger alert-dismissible">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong>Error!</strong> {{message}}
</div>  
{{/each}}

<div class="signup-form">





<form action="/company/register-employee/{{company._id}}" method="post"  enctype="multipart/form-data">
  <input type="hidden" value="{{company._id}}"  id="companyId">
  <input type="hidden" value="{{company.name}}"  id="companyName">
       <div class="form-group">

<h3>company name : {{company.name}}</h3>
    <div class="form-group">
    <label class="control-label col-sm-2" for="title">Role:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control"  placeholder="Role" name="employeeRole">
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-3 col-sm-10   col-md-12" style="margin:2%;" >
      <button type="submit" class="btn btn-primary">Register employee</button>
    </div>
  </div>
</form>
    
  </div>
</div> 

</div>